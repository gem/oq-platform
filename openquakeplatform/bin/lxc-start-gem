#!/bin/bash
bname="$(basename $0)"
if [ "$bname" = "lxc-start-ephemeral-gem" ]; then
    OUT=$(lxc-copy $*)

    if [ $? -eq 0 ]; then
        echo -e "You connect with the command:\n\t sudo lxc-console -n $(echo $OUT | cut -d ' ' -f 2)"
    else
         echo $OUT
    fi
elif [ "$bname" = "lxc-start-gem" ]; then
    LXC_NAME="$2"
    lxc-start -n "$LXC_NAME" -d
    echo -e "You connect with the command:\n\t sudo lxc-console -n ${LXC_NAME}"
else
    echo "This script must be named 'lxc-start-ephemeral-gem' or 'lxc-start-gem'"
    exit 1
fi
